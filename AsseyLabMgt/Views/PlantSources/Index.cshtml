@model IEnumerable<AsseyLabMgt.Models.PlantSource>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New PLant Source</a>
</p>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Plant Source List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
            <th>
                    @Html.DisplayNameFor(model => model.PlantSourceName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.PlantSourceDescription)
            </th>

            <th>
                    @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Edit</th>
            <th>View</th>
            <th>Delete</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlantSourceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlantSourceDescription)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
